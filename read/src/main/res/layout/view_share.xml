<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <HorizontalScrollView -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:scrollbars="none" > -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_share_wechat"
            android:gravity="center"
            android:text="微信"
            android:textColor="#808080"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_share_moment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_share_moment"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="#808080"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_share_qq"
            android:gravity="center"
            android:text="QQ"
            android:textColor="#808080"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_share_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_share_weibo"
            android:gravity="center"
            android:text="微博"
            android:textColor="#808080"
            android:textSize="12dp" />
    </LinearLayout>
    <!-- </HorizontalScrollView> -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/bg_selector_relativelayout_item"
        android:gravity="center"
        android:text="取消"
        android:textColor="#303030"
        android:textSize="16dip" />

</LinearLayout>