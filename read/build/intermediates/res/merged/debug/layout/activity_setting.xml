<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FriendHelpMainLinearlayout" >

    <include layout="@layout/layout_title_bar" />

    <View
        style="@style/vip_line"
        android:layout_marginTop="10dip" />

    <LinearLayout
        android:id="@+id/setting_chang_pass_ll"
        style="@style/vip_linearlayout" >

        <TextView
            style="@style/vip_left_tv"
            android:text="修改密码" />

        <ImageView
            style="@style/vip_right_arrow"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <View style="@style/vip_line" />

    <LinearLayout
        android:id="@+id/setting_callback_ll"
        style="@style/vip_linearlayout" >

        <TextView
            style="@style/vip_left_tv"
            android:text="意见反馈" />

        <ImageView
            style="@style/vip_right_arrow"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <View style="@style/vip_line" />

    <LinearLayout
        android:id="@+id/setting_version_ll"
        style="@style/vip_linearlayout" >

        <TextView
            style="@style/vip_left_tv"
            android:text="版本更新" />

        <TextView
            android:id="@+id/setting_version_tv"
            style="@style/vip_right_tv" />

        <ImageView
            style="@style/vip_right_arrow"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <View style="@style/vip_line" />

    <Button
        android:id="@+id/setting_logout_btn"
        style="@style/read_btn_green"
        android:layout_margin="20dip"
        android:text="退出登录" />

</LinearLayout>