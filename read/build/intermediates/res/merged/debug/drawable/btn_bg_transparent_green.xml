<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="#6FBE53" android:startColor="#6FBE53" />

            <stroke android:width="0dp" android:color="#CECDB5" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#6FBE53" android:startColor="#6FBE53" />

            <stroke android:width="0dp" android:color="#CECDB5" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#FBF7F4" android:startColor="#FBF7F4" />

            <stroke android:width="1dp" android:color="#CECDB5" />

            <corners android:radius="4dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>

</selector>