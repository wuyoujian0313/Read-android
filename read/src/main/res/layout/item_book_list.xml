<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_book_list_img"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginRight="15dip"
        android:scaleType="centerCrop"
        android:src="@drawable/test_book_01" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_book_list_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="乔布斯传 "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_book_list_author"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="作者 库克"
            android:textColor="#B0ACA6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_book_list_public"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="出版社：北京图书出版社"
            android:textColor="#B0ACA6"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/item_book_list_price_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6."
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_book_list_price_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 元"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_book_list_heart"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="fitCenter"
            android:src="@drawable/heart_read" />
    </LinearLayout>

</LinearLayout>